{
  "name": "discord-bot-starter",
  "version": "0.0.1",
  "description": "A minimal starter template for personal Discord bots using TypeScript, ESLint, Prettier, Discord.js and esbuild/ESM compilation",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "tsx ./src/index.ts",
    "dev": "tsc && tsx watch ./src/index.ts | pino-pretty",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mystrdat/discord-bot-starter.git"
  },
  "keywords": [
    "discord",
    "bot",
    "discordjs",
    "typescript",
    "eslint",
    "prettier"
  ],
  "author": "mystrdat",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mystrdat/discord-bot-starter/issues"
  },
  "homepage": "https://github.com/mystrdat/discord-bot-starter#readme",
  "dependencies": {
    "discord.js": "^14.7.1",
    "joi": "^17.7.0",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16"
  }
}
